{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":prConcurrentLimit10",
    ":prHourlyLimit2",
    ":semanticCommits",
    ":semanticCommitScope(deps)"
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": ["*"]
    },
    {
      "matchFileNames": ["apps/laboratory/package.json"],
      "enabled": true,
      "matchPackageNames": [
        "@walletconnect/utils",
        "wagmi",
        "@wagmi/connectors",
        "viem",
        "ethers",
        "@solana/web3.js",
        "@web3modal/{/,}**"
      ],
      "prPriority": 10
    }
  ]
}
